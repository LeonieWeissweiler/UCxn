            _anchor_ -> W;
            W [lemma = "who"|"what"|"when"|"how"|"why"|"which"|"whose"|"whom"|"where"]
        }
        commands {_anchor_.Cxn=_anchor_.Cxn + "," + "Interrogative-WHInfo-Direct";
                  _anchor_.CxnElt="Clause";
                  W.CxnElt="WHWord";
