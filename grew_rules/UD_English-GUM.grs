package npn {

    rule npn {
        pattern {
            _anchor_ [ xpos = re"N.*"];
            N2 [xpos = re"N.*" ];
            _anchor_.lemma = N2.lemma;
            _anchor_ -> N2;
            P[upos="ADP"];
            _anchor_ < P;
            P < N2;
        }
        without {
            N -[case]-> P2;
            P2 < N;
            P2 [lemma="from"];
        }
	without{ X -[fixed]-> _anchor_}

        commands {_anchor_.Cxn="NPN";
		  _anchor_.CxnElt="N1";
                  P.CxnElt="P";
                  N2.CxnElt="N2";}
    }

    rule npn_bis {
        pattern {
            _anchor_ [ xpos = re"N.*", Cxn<>re".*NPN.*"];
            N2 [xpos = re"N.*" ];
            _anchor_.lemma = N2.lemma;
            _anchor_ -> N2;
            P[upos="ADP"];
            N < P;
            P < N2;
        }
        without {
            _anchor_ -[case]-> P2;
            P2 < _anchor_;
            P2 [lemma="from"]
        }
        without {X -[fixed]->_anchor_}

        commands {_anchor_.Cxn=_anchor_.Cxn + "," + "NPN";
		  _anchor_.CxnElt="N1";
		  P.CxnElt="P";
                  N2.CxnElt="N2";}
    }
}